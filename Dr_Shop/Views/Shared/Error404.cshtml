@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="Icon Name Here !" type="image/x-icon">
    <link href="~/errors/style404.css" rel="stylesheet" />
    <title>صفحه یافت نشد</title>
</head>

<body>

    <div class="about">
        <a class="bg_links social portfolio" href="Https://www.Dr.Shop.ir" target="_blank">
            <span class="icon"></span>
        </a>
        <a class="bg_links social dribbble" href="Https://t.me/Dr.Shop" target="_blank">
            <span class="icon"></span>
        </a>
        <a class="bg_links social linkedin" href="Https://www.instagram.Com/Dr.Shop" target="_blank">
            <span class="icon"></span>
        </a>
        <a class="bg_links logo" asp-action="Index" asp-controller="Home"></a>
    </div>

    <nav>
        <div class="menu">
            <p class="website_name">Dr.Shop</p>
            <div class="menu_links">
                <a href="" class="link">About Us</a>
                <a asp-action="Login" asp-controller="User" class="link">Log In</a>
                <a asp-action="Signup" asp-controller="User" class="link">Sign Up</a>
            </div>
            <div class="menu_icon">
                <span class="icon"></span>
            </div>
        </div>
    </nav>

    <section class="wrapper">
        <div class="container">
            <div id="scene" class="scene" data-over-only="false">

                <div class="circle" data-depth="1.2"></div>

                <div class="one" data-depth="0.9">
                    <div class="content">
                        <span class="piece"></span>
                        <span class="piece"></span>
                        <span class="piece"></span>
                    </div>
                </div>

                <div class="two" data-depth="0.60">
                    <div class="content">
                        <span class="piece"></span>
                        <span class="piece"></span>
                        <span class="piece"></span>
                    </div>
                </div>

                <div class="three" data-depth="0.40">
                    <div class="content">
                        <span class="piece"></span>
                        <span class="piece"></span>
                        <span class="piece"></span>
                    </div>
                </div>


                <p class="p404" data-depth="0.50">@ViewBag.ErrorCode</p>
                <p class="p404" data-depth="0.10">@ViewBag.ErrorCode</p>

            </div>


            <div class="text">
                <article>
                    @if (TempData["Error"] != null)
                    {
                        <p>خطا <br />@TempData["Error"]</p>
                    }
                    else
                    {
                    <p>اوه اوه! انگار گم شدی <br>اگر تمایل دارید به صفحه اصلی برگردید ، بر روی دکمه زیر کلیک کنید!</p>
                    }
                    <button>خانه</button>
                </article>
            </div>

        </div>
    </section>



    <script src='https://cdnjs.cloudflare.com/ajax/libs/parallax/3.1.0/parallax.min.js'></script>
@*    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/errors/script404.js"></script>
</body>

</html>