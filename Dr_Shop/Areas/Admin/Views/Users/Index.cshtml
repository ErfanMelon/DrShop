@model UsersDto
<h6 class="mb-0 text-uppercase">لیست کاربران ثبت نام شده در سایت</h6>
<hr />
<div class="card">
    <div class="card-body">
        <table class="table mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">نام</th>
                    <th scope="col">ایمیل</th>
                    <th scope="col">سطح دسترسی</th>
                    <th scope="col">عملیات ها</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <th scope="row">@item.UserId</th>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>@item.Role</td>
                        <td>(هنوز در دسترس نیست)</td>
                    </tr>
                }
            </tbody>
        </table>
        <paging total-records="Model.RowCount"
                page-no="@ViewBag.CurrentPage"
                page-size="@ViewBag.PageSize"
                show-prev-next="true"
                sr-text-first="ابتدا"
                sr-text-last="انتها"
                sr-text-next="بعدی"
                sr-text-previous="قبلی"
                show-total-pages="false"
                show-total-records="false"
                show-page-size-nav="false"
                show-first-numbered-page="true"
                show-last-numbered-page="true"
                query-string-key-page-no="page"
                query-string-key-page-size="pagesize"
                gap-size="2">
        </paging>
    </div>
</div>