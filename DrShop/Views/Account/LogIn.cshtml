
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="Icon Name Here !" type="image/x-icon">
    <link href="~/login-signup/style.css" rel="stylesheet" />
    <title>ورود - ثبت نام</title>
</head>

<body>

    <div class="container right-panel-active">
        <!-- Sign Up -->
        <div class="container__form container--signup">
            <form action="#" class="form" id="form1">
                <h2 class="form__title">ثبت نام</h2>
                <input type="text" placeholder="User" class="input" id="txtregisterusername"/>
                <input type="email" placeholder="Email" class="input" id="txtregisteremail"/>
                <input type="password" placeholder="Password" class="input" id="txtregisterpassword"/>
                <button class="btn" id="btnRegister">ثبت نام</button>
            </form>
        </div>

        <!-- Sign In -->
        <div class="container__form container--signin">
            <form action="#" class="form" id="form2">
                <h2 class="form__title">ورود</h2>
                <input type="email" placeholder="Email" class="input" id="txtloginemail" />
                <input type="password" placeholder="Password" class="input" id="txtloginpassword" />
                <a href="#" class="link">رمز عبور خود را فراموش کرده اید؟!</a>
                <button class="btn" id="btnLogin">ورود</button>
            </form>
        </div>

        <!-- Overlay -->
        <div class="container__overlay">
            <div class="overlay">
                <div class="overlay__panel overlay--left">
                    <button class="btn" id="signIn">ورود</button>
                </div>
                <div class="overlay__panel overlay--right">
                    <button class="btn" id="signUp">ثبت نام</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/login-signup/script.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $('#btnLogin').click(function () {
            var email = $('#txtloginemail').val();
            var password = $('#txtloginpassword').val();

            $.ajax({
                url: '/Account/Login',
                data: { 'Email': email, 'Password': password },
                type: "post",
                cache: false,
                success: function (result) {
                    alert(result.Messege);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    
                }
            });
        });
        $('#btnRegister').click(function () {
            var username = $('#txtregisterusername').val();
            var email = $('#txtregisteremail').val();
            var password = $('#txtregisterpassword').val();

            $.ajax({
                url: '/Account/Signin',
                data: { 'Email': email, 'Password': password, 'Username': username },
                type: "post",
                cache: false,
                success: function (result) {
                    alert(result.Messege);
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            });
        });
    </script>
</body>

</html>