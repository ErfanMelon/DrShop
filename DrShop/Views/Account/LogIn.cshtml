@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link rel="stylesheet" href="/Login-Signup/In&Up.css">
    <link rel="shortcut icon" href="Icon Name Here !" type="image/x-icon">
    <title>Dr.Shop</title>
</head>

<body>

    <h2></h2>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="#">
                <h1>ایجاد حساب کاربری</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>یا از ایمیل خود برای ثبت نام استفاده کنید</span>
                <input type="text" placeholder="Name" id="txtregisterusername" />
                <input type="email" placeholder="Email" id="txtregisteremail" />
                <input type="password" placeholder="Password" id="txtregisterpassword" />
                <button id="btnRegister">ثبت نام</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form action="#">
                <h1>ورود</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>یا از حساب کاربری خود استفاده کنید</span>
                <input type="email" placeholder="Email" id="txtloginemail" />
                <input type="password" placeholder="Password" id="txtloginpassword" />
                <a href="#">رمز عبور خود را فراموش کرده اید؟!</a>
                <button id="btnLogin">ورود</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>خوش آمدید!</h1>
                    <p>برای حفظ ارتباط با ما لطفا با اطلاعات شخصی خود وارد شوید</p>
                    <button class="ghost" id="signIn">ورود</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>سلام رفیق!</h1>
                    <p>مشخصات شخصی خود را وارد کنید و ماجراجویی را با ما آغاز کنید</p>
                    <button class="ghost" id="signUp">ثبت نام</button>
                </div>
            </div>
        </div>
    </div>




    <script src="/Login-Signup/In&Up.js"></script>
    <script src="~/login-signup/jquery-3.6.1.min.js"></script>
    <script>
        $('#btnLogin').click(function () {
            var email = $('#txtloginemail').val();
            var password = $('#txtloginpassword').val();

            $.ajax({
                url: '/Account/Login',
                data: { 'Email': email, 'Password': password },
                type: "post",
                cache: false,
                success: function (result) {
                    alert(result.Messege);
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            });
        });
        $('#btnRegister').click(function () {
            var username = $('#txtregisterusername').val();
            var email = $('#txtregisteremail').val();
            var password = $('#txtregisterpassword').val();

            $.ajax({
                url: '/Account/Signin',
                data: { 'Email': email, 'Password': password, 'Username': username },
                type: "post",
                cache: false,
                success: function (result) {
                    alert(result.Messege);
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            });
        });
    </script>
</body>

</html>